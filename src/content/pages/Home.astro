---
// src/content/pages/Home.astro

import { siteDefaults } from '@/config/siteDefaults';
import ResponsiveImage from '@/components/ResponsiveImage.astro';
import Anchor from '@/components/ui/Anchor.astro';
import FaqList from '@/components/ui/FaqList.astro';
import { Icon } from 'astro-icon/components';
import { buildWhatsAppLink } from '@/utils/whatsapp';
import { getAllReviews, getGlobalAggregate } from "@/utils/reviews";

import StarRating from '@/components/ui/StarRating.astro';

import ReviewList from "@/components/ReviewList.astro";

import { inr, price } from '@/config/pricing';

const all = await getAllReviews();
const agg = await getGlobalAggregate();

const waStartHref = buildWhatsAppLink({
  phone: '',
  text: 'Hi VerifiedApostille! I want to start the apostille process by sharing my certificates/documents.',
  source: 'Hero • Start Apostille',
});

const waQuoteHref = buildWhatsAppLink({
  phone: '',
  text: 'Hi VerifiedApostille! I need a consultation and price/timeline quote for apostille services.',
  source: 'Hero • Free Quote',
});

// Contact details (with safe fallbacks)
const email = siteDefaults.contact?.email || `contact@${siteDefaults.domainName}`;
const tel1  = siteDefaults.contact?.phone || '';

const wa1   = (siteDefaults.contact?.whatsapp || '').replace(/[^\d]/g, '');

// HREFs
const telHref1 = tel1 ? `tel:${tel1.replace(/[^\d+]/g, '')}` : '';

const waHref1  = wa1 ? buildWhatsAppLink({
  phone: '',
  text: 'Hi VerifiedApostille! I need a consultation and price/timeline quote for apostille services.',
  source: 'home-contact',
}) : '';

const faq = [
    {
        question: "What is the cost of MEA apostille through VerifiedApostille?",
        answer: `Our standard SDM bundle covers Notary + SDM (Delhi) + MEA + premium return for just ₹${inr(price('sdmBundle'))} per document. Multi-document discounts are available; HRD/CoC routes are quoted after verification.`,
        speakable: true
    },
    {
        question: "Can I courier or email my documents from abroad?",
        answer: "Yes. Overseas Indian clients can send scanned copies by email or courier the originals to our Delhi service center. We guide you through every step securely."
    },
    {
        question: "Can you send the apostilled documents to my country?",
        answer: "Yes, we're happy to take full responsibility for safely delivering your completed apostille documents to your address anywhere in the world via Blue Dart, DHL, or other standard international courier services."
    },
    {
        question: "Is the apostille valid abroad?",
        answer: "Yes. Apostilles issued by the Ministry of External Affairs (MEA), India, are legally valid in all Hague Convention member countries."
    },
    {
        question: "Which documents can I apostille?",
        answer: "You can apostille personal (birth, marriage, PCC), educational (degree, diploma), and commercial documents (invoices, agreements, power of attorney)."
    },
    {
        question: "How long does the process take?",
        answer: "Typically 2-3 working days for most personal and educational documents. Processing time may vary slightly depending on document type or issuing state."
    },

    {
        question: "How can I track my apostille request?",
        answer: "You'll receive live status updates and tracking links at each step — from receipt to completion and dispatch."
    },
    {
        question: "What payment methods do you accept?",
        answer: "We accept secure payments via UPI and bank transfer. A GST invoice is provided for all transactions."
    },
    {
        question: "Is my data safe with VerifiedApostille?",
        answer: "Absolutely. We follow strict data-handling, encryption, and disposal policies to keep all client information secure and confidential."
    }
];

