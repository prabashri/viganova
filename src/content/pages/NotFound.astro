---
import HeroPages from '@/components/ui/HeroPages.astro';
interface Props {
  title?: string;
  description?: string;
}

const props = Astro.props as Props;
---
<section class="page-content w-100p flex flex-col jc-center ai-center mx-auto ta-center mn-h-70vh px-1 py-2">
     <HeroPages
        variant="simple"
        title="404"
        description={props.description}
        headingClass="text-5rem my-05"
        descriptionClass="max-w-featured text-xl my-1"
        containerClass='max-w-featured'
    />
    {/*-- Simple client-side search hook */}
    <div id="search" class="search-box mt-1 mn-w-320 w-100p max-w-content my-3" role="search">
      <input
        type="search"
        id="search-input"
        class="search-input text-l"
        placeholder="Search articles, pages…"
        autocomplete="off"
      />
      <ul id="search-results" class="no-bullets ta-left"></ul>
    </div>

    <div class="mx-auto ta-center my-2 max-w-content">
        <a href="/" class="col-base-00 p-1 td-none bg-primary-lighter col-base-100 br">
        ← Go back to homepage
        </a>
    </div>
</section>
